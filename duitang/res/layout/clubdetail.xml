<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray1"
 >

        <RelativeLayout
            style="@style/title_layout"
            android:layout_alignParentTop="true"
            android:id="@+id/task_linearlayout1">
        <Button
                style="@style/top_back_btn"
                android:id="@+id/tdc_back"
                android:text="">
        </Button>
        <TextView
                android:text="Club"
                style="@style/title_textview"
                android:id="@+id/task_title"
                android:layout_toRightOf="@id/tdc_back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dip"
                >
        </TextView>
        <TextView
                android:layout_marginTop="1dip"
                style="@style/title_line"
                >
        </TextView>
    </RelativeLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/Search_more_mainlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#F4F4F4"
            android:divider="@null"
            android:listSelector="@drawable/search_more_morelistselect"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/Search_more_morelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:divider="@null"
            android:listSelector="@drawable/search_more_morelistselect" />
    </LinearLayout>
        
    
    
</LinearLayout>