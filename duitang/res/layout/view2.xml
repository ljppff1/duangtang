<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/tv_bg_grey"
              android:orientation="vertical" >
    <LinearLayout
            android:layout_height="@dimen/toolbar_address72"
            android:layout_width="fill_parent"
            android:background="@color/transparent_bg_grey"
            >
        <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:id="@+id/breakout"
                android:gravity="center"
                android:drawableLeft="@drawable/fresh_003"
                android:paddingLeft="10dip"
                android:text="评论"
                android:layout_weight="1"/>
        <TextView
                style="@style/table_special_vertical_line"
                android:layout_height="@dimen/toolbar_address72"
                android:gravity="center"
                android:id="@+id/tli_left"/>
        <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:id="@+id/xftime"
                android:gravity="center"
                android:text="到这里去"
                android:layout_weight="1"/>
        <TextView
                style="@style/table_special_vertical_line"
                android:layout_height="@dimen/toolbar_address72"
                android:gravity="center"
                android:id="@+id/tli_right"/>
        <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:id="@+id/union"
                android:gravity="center"
                android:drawableLeft="@drawable/fresh_004"
                android:paddingLeft="10dip"
                android:text="收藏"
                android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>