             android:text="60"
             android:paddingLeft="10dp"
             android:textSize="10dp"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/blog_list_icon_good"
             />
