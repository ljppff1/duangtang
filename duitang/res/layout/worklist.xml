<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/complex_listview_layout"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/listviewitemselector"
        android:id="@+id/cjx_relative_layout">
    <CheckBox
            android:id="@+id/tl_checkBox"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text=" "
            android:checked="false"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/toolbar_address72"
            android:orientation="vertical"
            android:paddingTop="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="20dip"
            android:gravity="top"
            android:layout_toLeftOf="@id/tl_checkBox"
            android:layout_alignWithParentIfMissing="true"
            android:id="@+id/tli_linear1">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tl_billNo"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:textSize="@dimen/tv_size18"
                    android:text="店名"
                    android:textColor="@color/blue"
                    android:layout_alignParentLeft="true"
                    />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_toRightOf="@id/tl_billNo"
                android:paddingLeft="3dip">
                <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/fresh_002_2"/>
                <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/fresh_002_2"/>
                <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/fresh_002_2"/>
                <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/fresh_002_2"/>
                <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/fresh_002_2"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dip"
                    android:layout_weight="7"
                    android:stretchColumns="1"
                    android:shrinkColumns="1">

                <TextView android:id="@+id/tl_address"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:gravity="left|center_vertical"
                          android:text="地址"
                          android:textColor="@color/text_dz"
                          android:textSize="@dimen/tv_size16"
                        />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:src="@drawable/icon_phone"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/tli_left"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dip"
        android:layout_width="40dp"/>
        />
    <TextView
            style="@style/table_special_vertical_line"
            android:id="@+id/tli_left"
            android:layout_toLeftOf="@id/tl_checkBox"
            android:layout_alignWithParentIfMissing="true">
    </TextView>

</RelativeLayout>