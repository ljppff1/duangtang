<resources>
    <style name="main_tab_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_tab_item_text_color</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="AppTheme.FullScreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen" />

    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget" />

    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
        <item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
    </style>
    
    <style name="MenuDrawerStyle" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_arrow</item>
        <item name="mdMenuSize">250dp</item>
    </style>

    <style name="MenuDrawerStyle.Right" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_arrow_right</item>
        <item name="mdMenuSize">150dp</item>
    </style>

    <style name="MenuDrawerStyle.Top" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_arrow_top</item>
        <item name="mdMenuSize">64dp</item>
    </style>

    <style name="MenuDrawerStyle.Bottom" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_arrow_bottom</item>
        <item name="mdMenuSize">64dp</item>
    </style>

    <style name="AnimationPop">
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <item name="android:windowExitAnimation">@anim/out_to_down</item>
    </style>

    <!--  ******* Layout样式  ******* -->
    <style name="title_layout">                                     <!-- 大标题栏布局 -->
        <item name="android:layout_height">47dip</item>
        <item name="android:layout_width">fill_parent</item>
        <!--<item name="android:background">@drawable/top_title</item>-->
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="title_layout1">                                     <!-- 大标题栏布局 -->
        <item name="android:layout_height">47dip</item>
        <item name="android:layout_width">fill_parent</item>
        <!--<item name="android:background">@drawable/g</item>-->
        <item name="android:background">@color/gray1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="title_layout2">                                     <!-- 大标题栏布局 -->
        <item name="android:layout_height">47dip</item>
        <item name="android:layout_width">fill_parent</item>
        <!--<item name="android:background">@drawable/g</item>-->
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="top_back_btn">
        <!--<item name="android:background">@drawable/top_back_btn_selector</item>-->
        <item name="android:background">@drawable/action_bar_icon_back_dark</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">40dip</item>
    </style>

    <!--  ******* textview样式  ******* -->
    <style name="title_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
            </style>

    <style name="title_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:background">@drawable/title_line</item>
    </style>

    <style name="information_bottom_layout">                                 <!--  信息栏底边框 -->
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/informationview_bottom</item>
    </style>

    <style name="bottom_layout">                                  <!-- 底部布局 -->
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <!--<item name="android:background">@drawable/bg_down_72</item>-->
        <item name="android:background">@color/GhostWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="complex_listview_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <!-- <item name="android:background">@drawable/listview_background1</item> -->
        <item name="android:background">@drawable/listviewitemselector</item>
    </style>

    <style name="table_special_vertical_line">                                  <!-- 表 中长竖线-->
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:background">#dadada</item>
    </style>

    
</resources>
